package com.syd.oden.gesturelock.view; 
2 
 
3 import android.content.Context; 
4 import android.content.SharedPreferences; 
5 
 
6 /** 
7  * 项目名称：MeshLed_dxy 
8  * 类描述： 
9  * 创建人：oden 
10  * 创建时间：2016/7/25 19:05 
11  */ 
12 public class GesturePreference { 
13     private Context context; 
14     private final String fileName = "com.oden.gesturelock.filename"; 
15     private String nameTable = "com.oden.gesturelock.nameTable"; 
16 
 
17     public GesturePreference(Context context, int nameTableId) { 
18         this.context = context; 
19         if (nameTableId != -1) 
20             this.nameTable = nameTable + nameTableId; 
21     } 
22 
 
23     public void WriteStringPreference(String data) { 
24         SharedPreferences preferences = context.getSharedPreferences(fileName, Context.MODE_PRIVATE); 
25         SharedPreferences.Editor editor = preferences.edit(); 
26         editor.putString(nameTable, data); 
27         editor.commit(); 
28     } 
29 
 
30     public String ReadStringPreference() { 
31         SharedPreferences preferences = context.getSharedPreferences(fileName, Context.MODE_PRIVATE); 
32         return preferences.getString(nameTable, "null"); 
33     } 
34 
 
35 } 
